<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cm_dialog_processing_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="6:1"
        android:background="@color/cm_color_universal_foreground"
        android:text="@string/cm_string_universal_loading"
        style="@style/cm_style_universal_title_normal"/>

    <ProgressBar
        android:id="@+id/cm_dialog_processing_progress_bar"
        app:layout_constraintTop_toTopOf="@id/cm_dialog_processing_text"
        app:layout_constraintBottom_toBottomOf="@id/cm_dialog_processing_text"
        app:layout_constraintLeft_toLeftOf="@id/cm_dialog_processing_text"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:indeterminate="true" />

</androidx.constraintlayout.widget.ConstraintLayout>