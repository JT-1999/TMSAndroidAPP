<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/cm_color_universal_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cm_views_my_fixture_card_background_card_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardElevation="8dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintDimensionRatio="2:1"
        app:cardBackgroundColor="@color/cm_color_views_my_fixture_card_background"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/cm_views_my_fixture_card_title_text_view"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="@id/cm_views_my_fixture_card_background_card_view"
        app:layout_constraintBottom_toTopOf="@id/cm_views_my_fixture_card_horizontal_view"
        app:layout_constraintLeft_toLeftOf="@id/cm_views_my_fixture_card_horizontal_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/cm_style_universal_title_normal"
        tools:text="T1机械工具箱"/>

    <View
        android:id="@+id/cm_views_my_fixture_card_horizontal_view"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="@id/cm_views_my_fixture_card_background_card_view"
        app:layout_constraintBottom_toBottomOf="@id/cm_views_my_fixture_card_background_card_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintWidth_percent="0.7"
        android:background="@color/cm_color_views_my_fixture_card_divider"
        android:layout_width="0dp"
        android:layout_height="2dp"/>

    <View
        android:id="@+id/cm_views_my_fixture_card_vertical_view"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/cm_views_my_fixture_card_horizontal_view"
        app:layout_constraintBottom_toBottomOf="@id/cm_views_my_fixture_card_background_card_view"
        app:layout_constraintLeft_toLeftOf="@id/cm_views_my_fixture_card_background_card_view"
        app:layout_constraintRight_toRightOf="@id/cm_views_my_fixture_card_background_card_view"
        android:layout_margin="10dp"
        android:background="@color/cm_color_views_my_fixture_card_divider"
        android:layout_width="2dp"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/cm_views_my_fixture_card_deadline_title_text_view"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="@id/cm_views_my_fixture_card_vertical_view"
        app:layout_constraintBottom_toTopOf="@id/cm_views_my_fixture_card_deadline_content_text_view"
        app:layout_constraintLeft_toLeftOf="@id/cm_views_my_fixture_card_horizontal_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/cm_style_universal_text_normal"
        android:text="@string/cm_string_views_combined_my_fixture_card_deadline"/>

    <TextView
        android:id="@+id/cm_views_my_fixture_card_deadline_content_text_view"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/cm_views_my_fixture_card_deadline_title_text_view"
        app:layout_constraintBottom_toBottomOf="@id/cm_views_my_fixture_card_vertical_view"
        app:layout_constraintLeft_toLeftOf="@id/cm_views_my_fixture_card_horizontal_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/cm_style_universal_text_normal"
        tools:text="2018/12/08"/>

    <TextView
        android:id="@+id/cm_views_my_fixture_card_location_text_view"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="@id/cm_views_my_fixture_card_deadline_title_text_view"
        app:layout_constraintBottom_toBottomOf="@id/cm_views_my_fixture_card_deadline_title_text_view"
        app:layout_constraintLeft_toLeftOf="@id/cm_views_my_fixture_card_vertical_view"
        app:layout_constraintRight_toRightOf="@id/cm_views_my_fixture_card_background_card_view"
        app:layout_constraintHorizontal_bias="0.15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/cm_style_universal_text_normal"
        android:text="@string/cm_string_views_combined_my_fixture_card_location"/>

    <cn.edu.zust.dmt.hsy.common_module.views.combined.cm_MySignalLight
        android:id="@+id/cm_views_my_fixture_card_location_my_signal_view"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="@id/cm_views_my_fixture_card_deadline_title_text_view"
        app:layout_constraintBottom_toBottomOf="@id/cm_views_my_fixture_card_deadline_title_text_view"
        app:layout_constraintRight_toRightOf="@id/cm_views_my_fixture_card_horizontal_view"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:cm_mySignalLight="green"/>

    <TextView
        android:id="@+id/cm_views_my_fixture_card_risk_text_view"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="@id/cm_views_my_fixture_card_deadline_content_text_view"
        app:layout_constraintBottom_toBottomOf="@id/cm_views_my_fixture_card_deadline_content_text_view"
        app:layout_constraintLeft_toLeftOf="@id/cm_views_my_fixture_card_location_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/cm_style_universal_text_normal"
        android:text="@string/cm_string_views_combined_my_fixture_card_risk"/>

    <cn.edu.zust.dmt.hsy.common_module.views.combined.cm_MySignalLight
        android:id="@+id/cm_views_my_fixture_card_risk_my_signal_view"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="@id/cm_views_my_fixture_card_deadline_content_text_view"
        app:layout_constraintBottom_toBottomOf="@id/cm_views_my_fixture_card_deadline_content_text_view"
        app:layout_constraintRight_toRightOf="@id/cm_views_my_fixture_card_horizontal_view"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:cm_mySignalLight="green"/>

</androidx.constraintlayout.widget.ConstraintLayout>