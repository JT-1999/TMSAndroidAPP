<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--styles for app-->
    <style name="mbl_style_app" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mbl_color_universe_app_theme_color</item>
        <item name="colorPrimaryDark">#3F7500</item>
        <item name="colorAccent">@color/mbl_color_universe_app_theme_color</item>
    </style>

    <!--styles for textView-->
    <style name="mbl_style_universe_title">
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/mbl_color_universe_title</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="mbl_style_universe_title_large" parent="mbl_style_universe_title">
        <item name="android:textSize">@dimen/mbl_dimen_universe_title_large</item>
    </style>
    <style name="mbl_style_universe_title_normal" parent="mbl_style_universe_title">
        <item name="android:textSize">@dimen/mbl_dimen_universe_title_middle</item>
    </style>
    <style name="mbl_style_universe_title_small" parent="mbl_style_universe_title">
        <item name="android:textSize">@dimen/mbl_dimen_universe_title_small</item>
    </style>
    <style name="mbl_style_universe_text">
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/mbl_color_universe_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="mbl_style_universe_text_large" parent="mbl_style_universe_title">
        <item name="android:textSize">@dimen/mbl_dimen_universe_text_large</item>
    </style>
    <style name="mbl_style_universe_text_normal" parent="mbl_style_universe_title">
        <item name="android:textSize">@dimen/mbl_dimen_universe_text_middle</item>
    </style>
    <style name="mbl_style_universe_text_small" parent="mbl_style_universe_title">
        <item name="android:textSize">@dimen/mbl_dimen_universe_text_small</item>
    </style>

    <!--styles for editText-->
    <style name="mbl_style_universe_edit_text_single">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/mbl_color_universe_text</item>
        <item name="android:textColorHint">@color/mbl_color_universe_hint</item>
        <item name="android:singleLine">true</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="mbl_style_universe_edit_text_single_large" parent="mbl_style_universe_edit_text_single">
        <item name="android:textSize">@dimen/mbl_dimen_universe_text_large</item>
    </style>
    <style name="mbl_style_universe_edit_text_single_normal" parent="mbl_style_universe_edit_text_single">
        <item name="android:textSize">@dimen/mbl_dimen_universe_text_middle</item>
    </style>
    <style name="mbl_style_universe_edit_text_single_small" parent="mbl_style_universe_edit_text_single">
        <item name="android:textSize">@dimen/mbl_dimen_universe_text_small</item>
    </style>
    <style name="mbl_style_universe_edit_text_multiline">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/mbl_color_universe_text</item>
        <item name="android:textColorHint">@color/mbl_color_universe_hint</item>
        <item name="android:singleLine">false</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="mbl_style_universe_edit_text_multiline_large" parent="mbl_style_universe_edit_text_multiline">
        <item name="android:textSize">@dimen/mbl_dimen_universe_text_large</item>
    </style>
    <style name="mbl_style_universe_edit_text_multiline_normal" parent="mbl_style_universe_edit_text_multiline">
        <item name="android:textSize">@dimen/mbl_dimen_universe_text_middle</item>
    </style>
    <style name="mbl_style_universe_edit_text_multiline_small" parent="mbl_style_universe_edit_text_multiline">
        <item name="android:textSize">@dimen/mbl_dimen_universe_text_small</item>
    </style>

    <!--styles for button-->
    <style name="mbl_style_universe_button_normal" parent="mbl_style_universe_title_normal">
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!--styles for helper-->
    <style name="mbl_style_helper_toast" parent="android:Widget.Holo.Button.Borderless.Small">
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>