<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cm_color_universal_background">

    <cn.edu.zust.dmt.hsy.common_module.views.combined.cm_MyTopBar
        android:id="@+id/mm_activity_home_my_top_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="8:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:cm_myTopBarRightIcon="@drawable/cm_icon_universal_settings" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/mm_activity_home_view_pager2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/mm_activity_home_bottom_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mm_activity_home_my_top_bar" />

    <View
        android:id="@+id/mm_activity_home_bottom_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/cm_color_universal_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="8:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/mm_activity_home_front_image_view"
        style="@style/cm_style_universal_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/mm_icon_activity_home_front"
        app:layout_constraintBottom_toTopOf="@id/mm_activity_home_front_text_view"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/mm_activity_home_management_image_view"
        app:layout_constraintTop_toTopOf="@id/mm_activity_home_bottom_view"
        app:layout_constraintWidth_percent="0.08" />

    <ImageView
        android:id="@+id/mm_activity_home_management_image_view"
        style="@style/cm_style_universal_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/mm_icon_activity_home_management"
        app:layout_constraintBottom_toTopOf="@id/mm_activity_home_management_text_view"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@id/mm_activity_home_front_image_view"
        app:layout_constraintRight_toLeftOf="@id/mm_activity_home_message_image_view"
        app:layout_constraintTop_toTopOf="@id/mm_activity_home_bottom_view"
        app:layout_constraintWidth_percent="0.08" />

    <ImageView
        android:id="@+id/mm_activity_home_message_image_view"
        style="@style/cm_style_universal_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/mm_icon_activity_home_message"
        app:layout_constraintBottom_toTopOf="@id/mm_activity_home_message_text_view"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@id/mm_activity_home_management_image_view"
        app:layout_constraintRight_toLeftOf="@id/mm_activity_home_mine_image_view"
        app:layout_constraintTop_toTopOf="@id/mm_activity_home_bottom_view"
        app:layout_constraintWidth_percent="0.08" />

    <ImageView
        android:id="@+id/mm_activity_home_mine_image_view"
        style="@style/cm_style_universal_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/mm_icon_activity_home_mine"
        app:layout_constraintBottom_toTopOf="@id/mm_activity_home_mine_text_view"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@id/mm_activity_home_message_image_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/mm_activity_home_bottom_view"
        app:layout_constraintWidth_percent="0.08" />

    <TextView
        android:id="@+id/mm_activity_home_front_text_view"
        style="@style/mm_style_activity_home_bottom_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mm_string_activity_home_front"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/mm_activity_home_front_image_view"
        app:layout_constraintRight_toRightOf="@id/mm_activity_home_front_image_view"
        app:layout_constraintTop_toBottomOf="@id/mm_activity_home_front_image_view" />

    <TextView
        android:id="@+id/mm_activity_home_management_text_view"
        style="@style/mm_style_activity_home_bottom_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mm_string_activity_home_management"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/mm_activity_home_management_image_view"
        app:layout_constraintRight_toRightOf="@id/mm_activity_home_management_image_view"
        app:layout_constraintTop_toBottomOf="@id/mm_activity_home_management_image_view" />

    <TextView
        android:id="@+id/mm_activity_home_message_text_view"
        style="@style/mm_style_activity_home_bottom_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mm_string_activity_home_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/mm_activity_home_message_image_view"
        app:layout_constraintRight_toRightOf="@id/mm_activity_home_message_image_view"
        app:layout_constraintTop_toBottomOf="@id/mm_activity_home_message_image_view" />

    <TextView
        android:id="@+id/mm_activity_home_mine_text_view"
        style="@style/mm_style_activity_home_bottom_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mm_string_activity_home_mine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/mm_activity_home_mine_image_view"
        app:layout_constraintRight_toRightOf="@id/mm_activity_home_mine_image_view"
        app:layout_constraintTop_toBottomOf="@id/mm_activity_home_mine_image_view" />

</androidx.constraintlayout.widget.ConstraintLayout>