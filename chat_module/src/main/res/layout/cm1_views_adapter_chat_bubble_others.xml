<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mm_views_adapter_chat_bubble_others_guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <ImageView
        android:id="@+id/cm1_views_adapter_chat_bubble_others_image_view"
        style="@style/cm_style_universal_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.16"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="@dimen/cm_dimen_universal_text_middle"
        app:cardBackgroundColor="@color/cm_color_universal_foreground"
        app:cardCornerRadius="8dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/cm1_views_adapter_chat_bubble_others_image_view"
        app:layout_constraintRight_toLeftOf="@id/mm_views_adapter_chat_bubble_others_guideline"
        app:layout_constraintTop_toTopOf="@id/cm1_views_adapter_chat_bubble_others_image_view">

        <TextView
            android:id="@+id/cm1_views_adapter_chat_bubble_others_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ellipsize="none"
            android:maxLines="50"
            android:scrollHorizontally="false"
            android:textSize="@dimen/cm_dimen_universal_text_large"
            tools:text="哈哈哈哈哈哈" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>